<h1>edit trip</h1>

<% if @trip.errors %>
  <% @trip.errors.each do |error| %>
  <%= error %>
  <% end %>
<% end %>
<%= form_for @trip do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :country %>
  <%= f.country_select :country %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit "Create" %>

  <% end %>
